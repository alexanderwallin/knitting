{
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended",
    "plugin:import/errors"
  ],
  "rules": {
    "camelcase": "off",
    "no-console": "off",
    "no-plusplus": "off",
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "yoda": ["error", "never", { "exceptRange": true }],
    "import/extensions": ["error", "always", { "ignorePackages": true }],
  }
}
